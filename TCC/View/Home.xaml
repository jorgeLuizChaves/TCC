<base:ContentForm x:Class="TCC.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:k="http://schemas.microsoft.com/kinect/2013"
             xmlns:base="clr-namespace:MyComponents.Controls;assembly=MyComponents"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="668" d:DesignWidth="928.948">
    <Grid x:Name="Parent">
        <k:KinectRegion>
            <k:KinectScrollViewer  Name="scrollViewer" HoverBackground="Transparent" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <k:KinectTileButton x:Name="btnFisioterapeuta"  Margin="50 0 0 0" Label="Fisioterapeuta" />
                    <k:KinectTileButton x:Name="btnPaciente" Margin="100 0 0 0" Label="Paciente" />
                    <k:KinectTileButton x:Name="btnExercicio" Margin="100 0 0 0" Label="Exercício"/>
                    <k:KinectTileButton x:Name="btnOpcoes" Margin="100 0 0 0" Label="Opções"/>
                </StackPanel>
            </k:KinectScrollViewer>
        </k:KinectRegion>
            
    </Grid>
</base:ContentForm>
